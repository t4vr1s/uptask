extends layout

block contenido
  .contenido-principal
    h1 #{nombrePagina} - #{proyecto.nombre}

    form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="post")
      .campo
        label(for="tarea") Tarea:
        input.nombre-tarea(type="text" name="tarea" placeholder="Nombre Tarea")
      
      .campo.enviar
        input.boton.nueba-tarea(type="submit" value="Agregar")

    //- TODO: pendientes
    .listado-pendientes
      ul
        if tareas.length
          each tarea in tareas
            li.tarea(data-tarea=tarea.id)
              p= tarea.nombre
              .acciones
                if tarea.estado 
                  i.far.fa-check-circle.completo
                else  
                  i.far.fa-check-circle
                i.fas.fa-trash
        else 
          p No hay tareas en este proyecto

    .avance
      h2 Avance del Proyecto
      #barra-avance.barra-avance
        #porcentaje.porcentaje

    //- pre= vardump(tareas)
    //- acciones
    .contenedor-acciones
      a.boton(href=`/proyecto/editar/${proyecto.id}`) Editar Proyecto
      button.boton.eliminar#elimina-proyecto(data-proyecto-url=proyecto.url type="button") Eliminar Proyecto